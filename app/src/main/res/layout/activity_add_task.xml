<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addTask.AddTaskActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Task"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_searchTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_margin="16dp"
        android:background="@drawable/bg_fundo_trasparente_borda_cinza"
        android:hint="Task Title"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_discription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:gravity="start"
        android:background="@drawable/bg_fundo_trasparente_borda_cinza"
        android:hint="Discription"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_searchTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/priority"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/edt_discription"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/linLay_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_priority">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_fundo_trasparente_borda_cinza"
            android:layout_weight="0.33"
            android:textSize="18sp"
            android:text="Low"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/bg_fundo_salmao_borda_salmao"
            android:layout_weight="0.33"
            android:text="Medium"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_higth"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:background="@drawable/bg_fundo_verde_borda_verde"
            android:gravity="center"
            android:layout_weight="0.33"
            android:text="Higth"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@id/linLay_priority"
        app:layout_constraintEnd_toEndOf="@id/linLay_priority"
        app:layout_constraintTop_toBottomOf="@id/linLay_priority"
        android:background="@drawable/bg_fundo_azul"/>


</androidx.constraintlayout.widget.ConstraintLayout>